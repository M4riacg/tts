<%= form_for @ticket, :html => { :class => "form-horizontal ticket" } do |f| %>

  <% if @ticket.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @ticket.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :tecnic_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
    <%= f.select(:tecnic_id, options_for_select(User.all.collect {|p| [ p.name, p.id ] }), {}, {class: "form-control"}) %>
    </div>
    <%=f.error_span(:tecnic_id) %>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :content, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :content, :class => 'form-control' %>
    </div>
    <%=f.error_span(:content) %>
  </div>
  <div class="form-group">
    <%= f.label :priority, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :priority, :class => 'form-control' %>
    </div>
    <%=f.error_span(:priority) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tickets_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>